%   {action command}

% -------------------------------------------------------------------------- }}}
% {{{ logo command is used multiple times to layout a multipart logo.
\newcommand{\havasuLogoCommand}{%
  \vspace{1mm}%
  \hfill%
  \includegraphics[scale=.30]{fk-logo}%
  \hfill%
  \includegraphics[scale=.44]{fk-horizontal-bar}%
  \vspace{1mm}%
}%

% -------------------------------------------------------------------------- }}}
% {{{ background canvas

\setbeamertemplate{background canvas}{%
  \begin{tikzpicture}
    \node at (0.0, 5.0) {\includegraphics[scale=.30]{fk-logo}};
%    \node at (4.5, 1.5) {\includegraphics[scale=.44]{fk-horizontal-bar}};
  \end{tikzpicture}
}

% -------------------------------------------------------------------------- }}}
% {{{ footline

\setbeamertemplate{footline}{%
  \begin{beamercolorbox}{section in head/foot}%
    \hspace{7mm}%
    \copyright\ Copyright Fresenius Kabi AG%
    \hfill%
    \insertpagenumber%
    \hspace{1mm}%
    \vspace{1mm}%
  \end{beamercolorbox}%
}%

% -------------------------------------------------------------------------- }}}
% {{{ frametitle

\defbeamertemplate*{frametitle}{havasu}[1][]{%
  foo bar
%  \havasuLogoCommand%
}%

% -------------------------------------------------------------------------- }}}
% {{{ headline

\setbeamertemplate{headline}{%
  \vspace{1mm}%
  \hspace{58mm}%
  Strictily Confidential%
}%

% -------------------------------------------------------------------------- }}}
% {{{ items

\setbeamertemplate{items}[circle]%
\setbeamertemplate{sections/subsections in toc}[circle]%

% -------------------------------------------------------------------------- }}}
% {{{ sidebar left

\defbeamertemplate*{sidebar left}{havasu}[1][]{%
  \vspace{5mm}%
  \hspace{3mm}%
  \includegraphics[scale=.49]{fk-vertical-bar}%
}%

% -------------------------------------------------------------------------- }}}
% {{{ surroundwithmdframed

\mdfdefinestyle{HavasuLightBlueStyle}{%
  backgroundcolor=HavasuLightBlue!10,%
  innertopmargin=\topskip,%
  innertopmargin=\topskip,%
  leftmargin=2,%
  linecolor=HavasuBlue!50,%
  linewidth=0.5pt,
  rightmargin=2,%
  roundcorner=3pt,%
}%


\mdfdefinestyle{HavasuLightGreenStyle}{%
  backgroundcolor=green!10,%
  innertopmargin=\topskip,%
  innertopmargin=\topskip,%
  leftmargin=2,%
  linecolor=green!50,%
  linewidth=0.5pt,
  rightmargin=2,%
  roundcorner=3pt,%
}%

% -------------------------------------------------------------------------- }}}
% {{{ title page

\defbeamertemplate*{title page}{havasu}[1][]{%
%  \havasuLogoCommand%
%
  \begin{center}%
    \vspace{7mm}%
    \usebeamerfont{title}\inserttitle\par%
    \vspace{2mm}%
    \usebeamerfont{author}\insertauthor\par%
    \vspace{2mm}%
    \usebeamerfont{date}\insertdate\par%
  \end{center}%
%
  \vspace{16mm}%
  \hspace{-4mm}%
  \includegraphics[scale=.46]{fk-solutions}%
}%

% -------------------------------------------------------------------------- }}}
% {{{ End Mode presentation

\mode<all>%

