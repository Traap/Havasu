% {{{ Required packages

\RequirePackage[framemethod=TikZ]{mdframed}%
\RequirePackage{geometry, textpos}%
\RequirePackage{tikz}%
\RequirePackage{xcolor}%

% -------------------------------------------------------------------------- }}}
% {{{ Begin Mode presentation

\mode<presentation>%

\setbeamertemplate{navigation symbols}{}%
\setbeamertemplate{blocks}[rounded][shadow=true]%

% -------------------------------------------------------------------------- }}}
% {{{ Colors

\definecolor{HavasuBlue}      {RGB}{0,99,190}%
\definecolor{HavasuLightBlue} {RGB}{24,55,123}%
\definecolor{HavasuDarkBlue}  {RGB}{16,36,85}%
\definecolor{HavasuTitleBlue} {RGB}{7,27,80}%
\definecolor{HavasuTextGray}  {RGB}{66,66,66}%
\definecolor{HavasuTitleLine} {RGB}{23,33,113}%
\definecolor{HavasuBackground}{RGB}{234,234,234}%

\setbeamercolor*{author}               {fg=white,           bg=}%
\setbeamercolor*{date}                 {fg=white,           bg=}%
\setbeamercolor*{item}                 {fg=HavasuBlue,      bg=}%
\setbeamercolor*{header}               {fg=HavasuBlue,      bg=}%
\setbeamercolor{block title example}   {fg=HavasuLightBlue, bg=}%
\setbeamercolor{block title}           {fg=HavasuLightBlue, bg=}%
\setbeamercolor{footline}              {fg=white,           bg=HavasuBlue}%
\setbeamercolor{frametitle}            {fg=HavasuBlue,      bg=}%
\setbeamercolor{headline}              {fg=red,             bg=}%
\setbeamercolor{institute in head/foot}{parent={footline}}%
\setbeamercolor{item}                  {parent={normal text}}%
\setbeamercolor{logo}                  {parent={footline}}%
\setbeamercolor{normal text}           {fg=HavasuTextGray,  bg=}%
\setbeamercolor{section in toc}        {fg=HavasuLightBlue, bg=}%
\setbeamercolor{subsection in toc}     {fg=HavasuLightBlue, bg=}%
\setbeamercolor{title page}            {fg=HavasuBlue,      bg=}%

\setbeamerfont{headline}{size=\Tiny}%
\setbeamerfont{footline}{size=\Tiny}%

% -------------------------------------------------------------------------- }}}
% {{{ defbeamertemplate signatue

% \defbeamertemplate
%   <mode specification>*
%   {element name}
%   {predefined option}
%   [argument number]
%   [default optional argument]
%   {predefined text}
%   [action]
%   {action command}

% -------------------------------------------------------------------------- }}}
% {{{ background canvas

\setbeamertemplate{background canvas}{%
  \ifnum\thepage>1\relax%
    \includegraphics[width=\paperwidth,
                    height=\paperheight,
                    keepaspectratio]{images/fk-page-two}%
  \else%
    \includegraphics[width=\paperwidth,
                    height=\paperheight,
                    keepaspectratio]{images/fk-page-one}%
  \fi%
}%

% -------------------------------------------------------------------------- }}}
% {{{ footline

\setbeamertemplate{footline}{%
  \begin{beamercolorbox}{section in head/foot}%
    \hspace{10mm}%
    \copyright\ Copyright Fresenius Kabi AG%
    \hfill%
    \insertpagenumber%
    \hspace{1mm}%
    \vspace{1mm}%
  \end{beamercolorbox}%
}%

% -------------------------------------------------------------------------- }}}
% {{{ headline

\setbeamertemplate{headline}{%
  \vspace{1mm}%
  \hspace{58mm}%
  Strictily Confidential%
}%

% -------------------------------------------------------------------------- }}}
% {{{ items

\setbeamertemplate{items}[circle]%
\setbeamertemplate{sections/subsections in toc}[circle]%

% -------------------------------------------------------------------------- }}}
% {{{ surroundwithmdframed

\mdfdefinestyle{HavasuLightBlueStyle}{%
  backgroundcolor=HavasuLightBlue!10,%
  innertopmargin=\topskip,%
  innertopmargin=\topskip,%
  leftmargin=2,%
  linecolor=HavasuBlue!50,%
  linewidth=0.5pt,
  rightmargin=2,%
  roundcorner=3pt,%
}%

\mdfdefinestyle{HavasuLightGreenStyle}{%
  backgroundcolor=green!10,%
  innertopmargin=\topskip,%
  innertopmargin=\topskip,%
  leftmargin=2,%
  linecolor=green!50,%
  linewidth=0.5pt,
  rightmargin=2,%
  roundcorner=3pt,%
}%

% -------------------------------------------------------------------------- }}}
% {{{ title page

\defbeamertemplate*{title page}{havasu}[1][]{%
  \begin{center}%
    \vspace{7mm}%
    \usebeamerfont{title}\inserttitle\par%
    \vspace{2mm}%
    \usebeamerfont{author}\insertauthor\par%
    \vspace{2mm}%
    \usebeamerfont{date}\insertdate\par%
  \end{center}%
}%

% -------------------------------------------------------------------------- }}}
% {{{ End Mode presentation

\mode<all>%

% -------------------------------------------------------------------------- }}}
