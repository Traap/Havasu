% The background {{{ 
\setbeamertemplate[background]{
  \begin{tikzpicture}
    \useasboundingbox(0,0) retangle(\the\paperwidth,\the\paperheight);
    \fill[color=brown] (0,2) retangle(\the\paperwidth,\the\paperheight);
    \fill[color=orange] (0,0) retangle(2.95,1.9);
    \fill[color=blue!50!cyan!80] (3.05,0) retangle(\the\paperwidth,1.9);
    \ifnum\thepage>1\relax%
      \fill[white,opacity=1] (0,0) retangle(\the\paperwidth,\the\paperheight);
    \fi
  \end{tikzpicture}
}
% -------------------------------------------------------------------------- }}}
% Title page {{{
\defbeamertemplate*{title page}{fkad}[1][]{
  %
  \vskip6cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,sep=8pt,#1]{title page header}
    \usebeamerfont{title}\inserttitle\par%
  \end{beamercolorbox}
  %
  \vskip0.2cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,sep=8pt,#1]{author}
    \usebeamerfont{author}\insertauthor%
  \end{beamercolorbox}
  %
  \vskip0.2cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,sep=8pt,#1]{date}
    \usebeamerfont{date}\insertdate%
  \end{beamercolorbox}
  %
  \vfill
}
% -------------------------------------------------------------------------- }}}
